{
    "manifest_version": 2,

    "name": "Replace",
    "version": "0.1",

    "description": "Replace texts and images",

    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },

    "background": {
        "persistent": false,
        "page": "background.html"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "web_accessible_resources": [
        "data/*"
    ],

    "browser_action": {
        "default_title": "",
        "default_icon": "icons/icon-16.png",
        "default_popup": "popup.html"
    }
}
